/* Particle 12 */
.splash-particles span:nth-child(12) {
    --tx: 40px;
    --ty: 150px;
    animation-delay: 0.7s;
}

/* Particle 13 */
.splash-particles span:nth-child(13) {
    --tx: -110px;
    --ty: -90px;
    animation-delay: 0.9s;
}

/* Particle 14 */
.splash-particles span:nth-child(14) {
    --tx: 130px;
    --ty: -60px;
    animation-delay: 1.1s;
    width: 15px;
    height: 15px;
}

/* Particle 15 */
.splash-particles span:nth-child(15) {
    --tx: -40px;
    --ty: -150px;
    animation-delay: 1.3s;
}

/* Particle 16 */
.splash-particles span:nth-child(16) {
    --tx: 80px;
    --ty: 80px;
    animation-delay: 1.5s;
}

/* Particle 17 */
.splash-particles span:nth-child(17) {
    --tx: -90px;
    --ty: 100px;
    animation-delay: 1.7s;
    width: 7px;
