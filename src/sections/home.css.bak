}

/* Particle 18 */
.splash-particles span:nth-child(18) {
    --tx: 140px;
    --ty: -30px;
    animation-delay: 1.9s;
}

/* Particle 19 */
.splash-particles span:nth-child(19) {
    --tx: -140px;
    --ty: 50px;
    animation-delay: 2.1s;
}

/* Particle 20 */
.splash-particles span:nth-child(20) {
    --tx: 20px;
    --ty: 160px;
    animation-delay: 2.3s;
    width: 11px;
    height: 11px;
}

/* Particle 21 */
.splash-particles span:nth-child(21) {
    --tx: -20px;
    --ty: -130px;
    animation-delay: 0.15s;
}

/* Particle 22 */
.splash-particles span:nth-child(22) {
    --tx: 110px;
    --ty: 120px;
    animation-delay: 0.35s;
}

/* Particle 23 */
.splash-particles span:nth-child(23) {
    --tx: -120px;
    --ty: -110px;
    animation-delay: 0.55s;
    width: 13px;
    height: 13px;
}

/* Particle 24 */
.splash-particles span:nth-child(24) {
    --tx: 70px;
