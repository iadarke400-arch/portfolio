.section.home {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
    align-items: center;
    background:
        radial-gradient(125% 125% at 30% 50%,
            rgba(255, 247, 247, 0.15) 0%,
            rgba(0, 0, 0, 0.25) 35%,
            transparent 100%),
        #12171C;
    overflow: hidden;
    position: relative;
}

/* Left side - Orbit Animation */
.home-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.orbit-center-visual {
    width: 200px;
    height: 200px;
    position: absolute;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.splash-ring {
    position: absolute;
    width: 140px;
    height: 140px;
    border: 4px solid #5C86D4;
    border-radius: 50%;
    animation: ring-pulse 3s ease-in-out infinite;
    z-index: 2;
}

.splash-core {
    width: 120px;
    height: 120px;
    background-color: #5C86D4;
    border-radius: 64% 36% 27% 73% / 68% 38% 62% 32%;
    animation: blob-bounce 3s linear infinite;
    position: relative;

    z-index: -1;
    opacity: 0.5;
}

.splash-particles {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.splash-particles span {
    position: absolute;
    width: 10px;
    height: 10px;
    background: #5C86D4;
    border-radius: 50%;
    opacity: 0;
    /* Start from center */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: particles-explode 3s ease-out infinite;
}

/* 
   Randomizing directions and delays for many particles.
   --tx and --ty are relative translation distances.
   Range: -150px to 150px approx for good spread.
*/

/* Particle 1 */
.splash-particles span:nth-child(1) {
    --tx: 100px;
    --ty: -100px;
    animation-delay: 0s;
    width: 12px;
    height: 12px;
}

/* Particle 2 */
.splash-particles span:nth-child(2) {
    --tx: -80px;
    --ty: -120px;
    animation-delay: 0.2s;
    width: 8px;
    height: 8px;
}

/* Particle 3 */
.splash-particles span:nth-child(3) {
    --tx: 120px;
    --ty: 50px;
    animation-delay: 0.4s;
}

/* Particle 4 */
.splash-particles span:nth-child(4) {
    --tx: -100px;
    --ty: 80px;
    animation-delay: 0.6s;
    width: 14px;
    height: 10px;
    border-radius: 40%;
}

/* Particle 5 */
.splash-particles span:nth-child(5) {
    --tx: 50px;
    --ty: -140px;
    animation-delay: 0.8s;
}

/* Particle 6 */
.splash-particles span:nth-child(6) {
    --tx: -130px;
    --ty: -40px;
    animation-delay: 1.0s;
    width: 6px;
    height: 6px;
}

/* Particle 7 */
.splash-particles span:nth-child(7) {
    --tx: 90px;
    --ty: 110px;
    animation-delay: 1.2s;
}

/* Particle 8 */
.splash-particles span:nth-child(8) {
    --tx: -60px;
    --ty: 130px;
    animation-delay: 1.4s;
    width: 10px;
    height: 14px;
    border-radius: 30%;
}

/* Particle 9 */
.splash-particles span:nth-child(9) {
    --tx: 0px;
    --ty: -160px;
    animation-delay: 0.1s;
}

/* Particle 10 */
.splash-particles span:nth-child(10) {
    --tx: 150px;
    --ty: 0px;
    animation-delay: 0.3s;
}

/* Particle 11 */
.splash-particles span:nth-child(11) {
    --tx: -150px;
    --ty: 20px;
    animation-delay: 0.5s;
    width: 9px;
    height: 9px;
