/* Particle 28 */
.splash-particles span:nth-child(28) {
    --tx: 30px;
    --ty: 140px;
    animation-delay: 1.55s;
}

/* Particle 29 */
.splash-particles span:nth-child(29) {
    --tx: -30px;
    --ty: -150px;
    animation-delay: 1.75s;
}

/* Particle 30 */
.splash-particles span:nth-child(30) {
    --tx: 100px;
    --ty: 100px;
    animation-delay: 1.95s;
    width: 12px;
    height: 8px;
    border-radius: 40%;
}

/* Particle 31 */
.splash-particles span:nth-child(31) {
    --tx: -100px;
    --ty: -100px;
    animation-delay: 0.25s;
}

/* Particle 32 */
.splash-particles span:nth-child(32) {
    --tx: 0px;
    --ty: 170px;
    animation-delay: 0.45s;
}


@keyframes ring-pulse {
    0% {
        transform: scale(0.9);
        box-shadow: 0 0 0 0 rgba(92, 134, 212, 0.7);
    }

    70% {
        transform: scale(1);
        box-shadow: 0 0 0 20px rgba(92, 134, 212, 0);
    }

    100% {
        transform: scale(0.9);
        box-shadow: 0 0 0 0 rgba(92, 134, 212, 0);
    }
}

@keyframes blob-bounce {

    0%,
    100% {
        border-radius: 64% 36% 27% 73% / 68% 38% 62% 32%;
        transform: rotate(0deg);
    }

    33% {
        border-radius: 36% 64% 73% 27% / 32% 68% 32% 62%;
        transform: rotate(120deg);
    }

    66% {
        border-radius: 73% 27% 36% 64% / 62% 32% 68% 38%;
        transform: rotate(240deg);
    }
}

@keyframes particles-explode {
    0% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
    }

    100% {
        /* Move to random (tx, ty) from center */
        transform: translate(calc(-50% + var(--tx)), calc(-50% + var(--ty))) scale(0);
        opacity: 0;
    }
}

.orbit-container {
    width: 400px;
    height: 400px;
    position: relative;
    animation: rotate 20s linear infinite;
}

.orbit-item {
    position: absolute;
    width: 80px;
    height: 80px;
    border-radius: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent !important;
    animation: counter-rotate 20s linear infinite;
}

.orbit-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.3));
    /* Base animation, customized per item below */
    animation: pulse-size 4s ease-in-out infinite;
}

/* Varying sizes/animations for each item */
.item-1 img {
    animation-duration: 3s;
    animation-delay: 0s;
}

.item-2 img {
    animation-duration: 4.5s;
    animation-delay: 1s;
}

.item-3 img {
    animation-duration: 3.5s;
    animation-delay: 0.5s;
}

.item-4 img {
    animation-duration: 5s;
    animation-delay: 2s;
}

.item-5 img {
    animation-duration: 4s;
    animation-delay: 1.5s;
}

.item-6 img {
    animation-duration: 3.8s;
    animation-delay: 0.8s;
}

@keyframes pulse-size {

    0%,
    100% {
        transform: scale(0.8);
    }

    50% {
        transform: scale(1.15);
    }
}

/* Positioning items in a circle - 60 degrees apart */
/* Item 1: 0 degrees (Top center) */
.item-1 {
    top: 0%;
    left: 50%;
}

/* Item 2: 60 degrees (Top Right) */
.item-2 {
    top: 25%;
    left: 93.3%;
}

/* Item 3: 120 degrees (Bottom Right) */
.item-3 {
    top: 75%;
    left: 93.3%;
}

/* Item 4: 180 degrees (Bottom center) */
.item-4 {
    top: 100%;
    left: 50%;
}

/* Item 5: 240 degrees (Bottom Left) */
.item-5 {
    top: 75%;
    left: 6.7%;
}

/* Item 6: 300 degrees (Top Left) */
.item-6 {
    top: 25%;
    left: 6.7%;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

@keyframes counter-rotate {
    from {
        transform: translate(-50%, -50%) rotate(0deg);
    }

    to {
        transform: translate(-50%, -50%) rotate(-360deg);
    }
}

/* Right side - Typography */
.home-text {
    text-align: left;
    vertical-align: middle;
    padding-left: 7rem;
    padding-bottom: 8rem;
    z-index: 2;
}

.title-large {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 170px;
    line-height: 80%;
    letter-spacing: 0px;
    background: linear-gradient(90deg, rgba(74, 85, 99, 1) 0%, rgba(45, 55, 72, 1) 18%, rgba(45, 55, 72, 1) 100%);
    background-clip: content-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
}

.subtitle-large {
    font-family: 'Lexend Deca', sans-serif;
    font-weight: 400;
    text-transform: uppercase;
    font-size: 64px;
    line-height: 100%;
    letter-spacing: 30px;
    background: linear-gradient(90deg, rgba(74, 85, 99, 1) 0%, rgba(45, 55, 72, 1) 18%, rgba(45, 55, 72, 1) 100%);
    background-clip: content-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    padding-left: 10px;
}

.highlight-blue {
    color: #222;
}

.name-plate {
    margin-top: 5rem;
    background-color: #333;
    color: #aaa;
    padding: 1rem 3rem;
    border-radius: 50px 0 0 50px;
    display: inline-block;
    font-size: 2rem;
    font-weight: bold;
    text-transform: uppercase;
    position: absolute;
    right: 0;
    transition: all 0.3s ease;
    cursor: default;
}

.name-plate:hover {
    background-color: #5C86D4;
    color: #fff;
    box-shadow: -5px 0 25px rgba(92, 134, 212, 0.6);
    padding-right: 4.5rem;
    /* Slide/Grow visual effect */
}
